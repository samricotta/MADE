<div class="filters">
  <div class="search-cuisine">
    <%= form_tag meals_path, method: :get, class: "form-inline" do %>
      <%= text_field_tag :cuisine,
        params[:cuisine],
        class: "form-control",
        placeholder: "Filer by cuisine type"
      %>
      <%= select_tag :dietary, options_from_collection_for_select(@dietaries, :id, :name, params[:dietary]), {:include_blank => 'Select dietary', :class => 'form-control'} %>

       <%= submit_tag "Search", :name => nil, class: "btn-all" %>
    <% end %>



  </div>
</div>

<h1>Homemade meals around you</h1>
<p>Find me in app/views/meals/index.html.erb</p>


<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <% @meals.each do |meal|  %>
        <% if meal.photo? %>
          <% photo = cl_image_path meal.photo %>
        <% else %>
           <% photo = "https://homemadeandyummy.com/wp-content/uploads/2017/04/Homemade-Yummy-Logo.jpg" %>
        <% end  %>
        <div class="meal-card" style= "background-image:linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(69,68,68,0.8) 100%), url('<%= meal.photo %>')">
          <div class="meal-card-content">
           <%= link_to meal.name, meal_path(meal) %>
           <%= meal.cuisine %>
           <% meal.dietaries.each do |dietary| %>
            <%= dietary.name %>
           <% end %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  ></div>
</div>



