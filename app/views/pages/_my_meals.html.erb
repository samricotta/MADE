<% current_user.meals.each do |meal| %>
  <div class="order-myorders">
    <div class="order-header">
      <div class="name-left">
        <h2><%= meal.name %></h2>
      </div>
      <div class="price-right">
        <h2><%= humanized_money_with_symbol(meal.price) %></h2>
      </div>
    </div>
    <div class="my-meal-details">
      <div class="meal-info">
        <h3>Meal description</h3>
        <p><%= meal.description %></p>
        <%= link_to "Edit this meal", edit_meal_path(meal), class: "btn-reverse" %>
        <%= link_to "Delete this meal", meal_path(meal) , method: :delete, data: { confirm: "Are you sure you want to delete this meal?"}, class: "btn-reverse" %>
      </div>
      <% if meal.photo? %>
        <% photo = cl_image_path meal.photo %>
      <% else %>
        <% photo = "https://images.unsplash.com/photo-1473093226795-af9932fe5856?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=3bf6fd384a4045ad91b8f08279f02ab8&auto=format&fit=crop&w=1370&q=80" %>
      <% end %>
        <div class="card-dashboard" style="background-image: url(<%= photo %>);">
          <span class= "portions_left"><%= meal.portions_left %></span>
        </div>
      </div>
    </div>
  <% end %>
