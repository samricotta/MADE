<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div id="sign-in">
          <h2>Sign In</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions text-center mb">
              <%= f.button :submit, "Sign In", class: "btn-all"%>
            </div>
          <% end %>

            <p>Not yet a member? Create an account!</p>

          <%# render "devise/shared/links" %>
          <button id="sign-up-button" class="btn-all padding-btn">Create an account</button>
        </div>

        <div id="sign-up" class="hidden">
          <h2>Sign up</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :first_name, required: true, autofocus: true %>
              <%= f.input :last_name, required: true %>
              <%= f.input :email, required: true %>
              <%= f.input :address, required: true %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "Sign up", class: "btn-all" %>
            </div>
          <% end %>

          <%# render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

